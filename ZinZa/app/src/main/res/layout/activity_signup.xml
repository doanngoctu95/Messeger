<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/fbcolor"
        android:orientation="horizontal"
        android:id="@+id/llToolbar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/left_arrow"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnBackSignUp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SignUp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/tvTb"
        android:layout_below="@+id/llToolbar"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/icon_image2"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/zinza_icon"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_below="@+id/tvTb"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtEmailSign"
        android:drawableLeft="@drawable/mail"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/Email"
        android:layout_below="@+id/edtUsernameSign"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        >
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtPassWrLogin"
        android:drawableLeft="@drawable/locked"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/Passwd"
        android:layout_below="@id/edtEmailSign"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:maxLines="1"
        >
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtConfirm"
        android:drawableLeft="@drawable/check_mark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/confirm"
        android:layout_below="@+id/edtPassWrLogin"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        >
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtDob"
        android:drawableLeft="@drawable/calendar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edtConfirm"
        android:hint="@string/Dob"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        >
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/edtDob"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edtDob">
        <Button
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_state"
            android:layout_below="@id/edtDob"
            android:gravity="center"
            android:text="@string/SignUp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtUsernameSign"
        android:drawableLeft="@drawable/avatar"
        android:hint="@string/user"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:layout_below="@+id/icon_image2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/edtEmailSign"
        android:layout_alignStart="@+id/edtEmailSign">
        <requestFocus/>
    </EditText>

</RelativeLayout>