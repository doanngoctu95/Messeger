<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/a7"
        android:id="@+id/imgFrendAvatar"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black"/>

    <TextView
        android:text="Văn Cường"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgFrendAvatar"
        android:layout_toRightOf="@+id/imgFrendAvatar"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/txtNameFriend"
        android:textSize="16sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@android:color/holo_green_light"
        app:civ_border_width="3dp"
        android:layout_alignTop="@+id/txtNameFriend"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:id="@+id/imgStatus"/>
</RelativeLayout>