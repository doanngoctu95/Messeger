<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/jpg"
        android:padding="15dp"
        android:id="@+id/imFile"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/tvNameFile"
        android:text="Amazing animals"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/imFile"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/tvTimeFile"
        android:text="18/02/2017"
        android:textSize="10sp"
        android:textColor="@color/gray"
        android:layout_alignTop="@+id/tvNameFile"
        android:layout_toLeftOf="@+id/imgOption"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp" />

    <ImageView
        android:id="@+id/imgOption"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:clickable="true"
        android:src="@drawable/ic_dot"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp" />

</RelativeLayout>